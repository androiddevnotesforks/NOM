<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="RecyclerItem">
        <item name="android:layout_marginTop">@dimen/item_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/item_vertical_margin</item>
        <item name="android:layout_marginStart">@dimen/item_horizontal_padding</item>
        <item name="android:layout_marginEnd">@dimen/item_horizontal_padding</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="RecyclerItem.Text" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/item_text_size</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:layout_marginStart">@dimen/item_text_start_margin</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>
</resources>